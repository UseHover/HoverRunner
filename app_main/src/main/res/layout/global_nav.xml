<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:orientation="horizontal"
        xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Actions"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="12sp"
            android:id="@+id/global_nav_Actions"
            android:drawablePadding="4dp"
            android:textColor="@color/colorMainGrey"
            android:drawableTop="@drawable/ic_device_hub_grey_24dp"/>

    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Transactions"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:textSize="12sp"
            android:id="@+id/global_nav_Transactions"
            android:layout_marginHorizontal="16dp"
            android:drawablePadding="4dp"
            android:textColor="@color/colorMainGrey"
            android:drawableTop="@drawable/ic_list_grey_24dp"/>

    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Settings"
            android:textSize="12sp"
            android:id="@+id/global_nav_Settings"
            android:drawablePadding="4dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:textColor="@color/colorMainGrey"
            android:drawableTop="@drawable/ic_settings_grey_24dp"/>

</LinearLayout>