<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@color/colorPrimaryDark"
        tools:context=".ui.transactionDetails.TransactionDetailsFragment"
        android:layout_height="wrap_content">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorSecondaryGrey"
                android:paddingVertical="16dp"
                android:id="@+id/transactionDetailsTopLayoutId"
                android:paddingHorizontal="@dimen/activity_horizontal_margin"
                android:orientation="vertical">
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:drawableStart="@drawable/ic_arrow_back_black_24dp"
                    android:drawablePadding="@dimen/activity_horizontal_margin"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/transactionTextSize"
                    android:id="@+id/transactionDetails_toolbarText"/>

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/actDetailsStatusMarginLeft"
                    android:textSize="@dimen/text_13"
                    android:id="@+id/transactionDetails_subtoolText"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                    />


            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/unrunStatus_title"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/text_13"
                    android:id="@+id/transactionDetails_statusTitle"
                    />

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/unrunStatus_title"
                    android:textStyle="bold"
                    android:visibility="gone"
                    android:layout_marginStart="42dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/text_13"
                    android:id="@+id/transactionDetails_statusTitle2"
                    />

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/transactionDetails_statusDesc"
                    android:text="@string/pendingStatus_desc"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/text_13"
                    android:visibility="gone"
                    android:layout_marginStart="@dimen/actDetailsStatusMarginLeft"
                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                    />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/transactionDetails_statusLink"
                    android:text="@string/pendingStatus_linkText"
                    android:textStyle="bold"
                    android:textSize="@dimen/text_13"
                    android:textColor="@color/colorPrimaryDark"
                    android:drawablePadding="4dp"
                    android:visibility="gone"
                    android:drawableEnd="@drawable/ic_open_in_new_black_15dp"
                    android:layout_marginStart="@dimen/actDetailsStatusMarginLeft"
                    android:layout_marginBottom="8dp"
                    />
        </LinearLayout>


        <androidx.recyclerview.widget.RecyclerView
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"
                android:id="@+id/transac_aboutInfo_recyclerView"/>


        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/messages"
                android:textColor="@color/colorHoverWhite"
                android:textSize="@dimen/text_16"
                android:textStyle="bold"
                android:layout_marginTop="48dp"
                android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                />

        <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorPrimary"
                android:layout_marginVertical="8dp"
                android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
                />
        <androidx.recyclerview.widget.RecyclerView
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"
                android:id="@+id/transac_messages_recyclerView"/>


        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
                android:textColor="@color/colorHoverWhite"
                android:textStyle="bold"
                android:layout_marginTop="32dp"
                android:textSize="@dimen/text_16"
                android:text="@string/device"/>

        <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorPrimary"
                android:layout_marginVertical="8dp"
                android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
                />

        <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"
                android:id="@+id/transac_devices_recyclerView"/>


            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/debug_info"
                    android:textColor="@color/colorHoverWhite"
                    android:textSize="@dimen/text_16"
                    android:textStyle="bold"
                    android:layout_marginTop="48dp"
                    android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    />

        <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorPrimary"
                android:layout_marginVertical="8dp"
                android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
                />
        <androidx.recyclerview.widget.RecyclerView
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"
                android:id="@+id/transac_debugInfo_recyclerView"/>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>